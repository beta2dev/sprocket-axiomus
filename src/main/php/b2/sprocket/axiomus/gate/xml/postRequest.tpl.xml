<singleorder xmlns:a="b2tplxml">
    <mode a:bind="$mode" a:text="@orderType" type="?@modeType"/>
    <auth a:bind="$auth" ukey="@ukey" checksum="@checksum"/>
    <order okey="?@okey" inner_id="?@innerId" name="@name" b_date="@beginDate" incl_deliv_sum="?@inclDelivSum" post_type="@postType" sms="?@sms" email="?@email"
           a:bind="$order">
        <address a:bind="@orderContent.address" index="@index" region="@region" area="@area" p_address="@poluchAddress"/>
        <contacts a:bind="@orderContent" a:text="@contacts"/>
        <services a:bind="@orderContent.services"  valuation="?@valuation" fragile="?@fragile" cod="?@cod" big="?@big" class1="?@class1"
                  post_tarif="?@postTarif" not_avia="?@notAvia" oprimize="?@optimize" sms_inform="?@smsInform" insurance="?@insurance" />
        <items a:output="@orderContent.items">
            <item a:bindlist="@orderContent.items" name="@name" weight="@weight" quantity="@quantity" price="@price" orderId="?@orderId"/>
        </items>
    </order>
</singleorder>