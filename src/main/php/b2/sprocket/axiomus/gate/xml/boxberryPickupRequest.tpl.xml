<singleorder xmlns:a="b2tplxml">
    <mode a:bind="$mode" a:text="@orderType" type="?@modeType"/>
    <auth a:bind="$auth" ukey="@ukey" checksum="@checksum"/>
    <order okey="?@okey" inner_id="?@innerId" name="@name" d_date="@dayDate" incl_deliv_sum="?@inclDelivSum" a:bind="$order">
        <address a:bind="@orderContent.address" office_code="@officeCode"/>
        <contacts a:bind="@orderContent" a:text="@contacts"/>
        <services a:bind="@orderContent.services" cod="?@cod" checkup="?@checkup" part_return="?@partReturn"/>
        <items a:output="@orderContent.items">
            <item a:bindlist="@orderContent.items" name="@name" weight="@weight" quantity="@quantity" price="@price"/>
        </items>
    </order>
</singleorder>