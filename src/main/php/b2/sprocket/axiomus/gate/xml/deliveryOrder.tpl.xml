<singleorder xmlns:a="b2tplxml">
    <auth a:bind="$auth" ukey="@ukey" checksum="@checksum"/>
    <mode a:bind="$mode" a:text="@orderType"/>
    <order okey="?@okey" inner_id="?@innerId" name="@name" address="@address" from_mkad="?@fromMkad" d_date="@dayDate" b_time="@beginTime" e_time="@endTime" incl_deliv_sum="?@inclDelivSum"
           places="@places" city="@city" sms="?@sms" sms_sender="?@smsSender" garden_ring="?@gardenRing" email="?@email" discount_value="?@discountValue" discount_unit="?@discountUnit"
           a:bind="$order">
        <contacts a:bind="@orderContent" a:text="@contacts"/>
        <description a:bind="@orderContent" a:output="@orderContent.description" a:text="@description"/>
        <services a:bind="@orderContent.services" a:output="@orderContent.services" cash="?@cash" cheque="?@cheque" card="?@card" big="?@big" />
        <items a:output="@orderContent.items">
            <item a:bindlist="@orderContent.items" name="@name" weight="@weight" quantity="@quantity" price="@price" orderId="?@orderId"/>
        </items>
        <item a:bind="@orderContent.item" a:output="@orderContent.item" name="@name" weight="@weight" quantity="@quantity" price="@price"/>
        <delivset a:output="@orderContent.delivset" a:bind="@orderContent.delivset" return_price="@returnPrice" above_price="@abovePrice">
            <below a:bindlist="@belows" below_sum="@belowSum" price="@price"/>
        </delivset>
        <discountset a:output="@orderContent.discountset" a:bind="@orderContent.discountset" above_discount="@aboveDiscount" >
            <below a:bindlist="@belows" below_sum="@belowSum" discount="@discount"/>
        </discountset>
    </order>
</singleorder>

